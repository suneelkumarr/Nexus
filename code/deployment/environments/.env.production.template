# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_URL=https://your-production-project.supabase.co

# =============================================================================
# STRIPE CONFIGURATION (LIVE KEYS)
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-live-key
STRIPE_SECRET_KEY=sk_live_your-stripe-live-secret
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-live-webhook-secret

# =============================================================================
# INSTAGRAM API CONFIGURATION
# =============================================================================
VITE_INSTAGRAM_CLIENT_ID=your-instagram-production-client-id
INSTAGRAM_CLIENT_ID=your-instagram-production-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-production-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-production-access-token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_URL=https://app.your-domain.com
NODE_ENV=production
BUILD_MODE=prod

# =============================================================================
# A/B TESTING CONFIGURATION
# =============================================================================
VITE_AB_TESTING_ENABLED=true
VITE_CONVERSION_TRACKING_ENABLED=true
AB_TEST_SAMPLE_RATE=100
AB_TEST_DURATION_DAYS=14

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
VITE_ANALYTICS_ENABLED=true
SENTRY_DSN=your-production-sentry-dsn
MIXPANEL_TOKEN=your-production-mixpanel-token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
CDN_URL=https://cdn.your-domain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_FEATURE_CONVERSION_CENTER=true
VITE_FEATURE_AB_TESTING=true
VITE_FEATURE_MOBILE_OPTIMIZATION=true
VITE_FEATURE_AI_INSIGHTS=true
VITE_FEATURE_SOCIAL_PROOF=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
VITE_API_TIMEOUT=15000
VITE_CACHE_TTL=600000
VITE_BUNDLE_ANALYZER=false
VITE_ENABLE_COMPRESSION=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VITE_CORS_ORIGINS=https://app.your-domain.com
VITE_SECURITY_HEADERS_ENABLED=true
VITE_RATE_LIMITING_ENABLED=true
VITE_HTTPS_ONLY=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@db.your-production-project.supabase.co:5432/postgres
DB_POOL_SIZE=50
DB_TIMEOUT=60000
DB_SSL_MODE=require

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_RETENTION_DAYS=90
LOG_SENTRY_ENABLED=true

# =============================================================================
# CDN & ASSETS
# =============================================================================
VITE_ASSET_CDN_URL=https://cdn.your-domain.com
VITE_IMAGE_OPTIMIZATION=true
VITE_WEBP_SUPPORT=true

# =============================================================================
# CONVERSION OPTIMIZATION
# =============================================================================
VITE_CONVERSION_TRACKING_PIXEL_ID=your-facebook-pixel-id
VITE_GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION=true

# =============================================================================
# MONITORING THRESHOLDS
# =============================================================================
ERROR_RATE_THRESHOLD=0.05
API_RESPONSE_TIME_THRESHOLD=2000
CONVERSION_RATE_THRESHOLD=0.03
USER_REGISTRATION_DROP_THRESHOLD=0.15

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=100
CONVERSION_RATE_LIMIT=100