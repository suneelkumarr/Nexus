# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key
SUPABASE_URL=https://your-staging-project.supabase.co

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# INSTAGRAM API CONFIGURATION
# =============================================================================
VITE_INSTAGRAM_CLIENT_ID=your-instagram-test-client-id
INSTAGRAM_CLIENT_ID=your-instagram-test-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-test-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-test-access-token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_URL=https://staging.your-domain.com
NODE_ENV=staging
BUILD_MODE=staging

# =============================================================================
# A/B TESTING CONFIGURATION
# =============================================================================
VITE_AB_TESTING_ENABLED=true
VITE_CONVERSION_TRACKING_ENABLED=true
AB_TEST_SAMPLE_RATE=100
AB_TEST_DURATION_DAYS=14

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
VITE_ANALYTICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_FEATURE_CONVERSION_CENTER=true
VITE_FEATURE_AB_TESTING=true
VITE_FEATURE_MOBILE_OPTIMIZATION=true
VITE_FEATURE_AI_INSIGHTS=true
VITE_FEATURE_SOCIAL_PROOF=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
VITE_API_TIMEOUT=10000
VITE_CACHE_TTL=300000
VITE_BUNDLE_ANALYZER=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VITE_CORS_ORIGINS=https://staging.your-domain.com,http://localhost:5173
VITE_SECURITY_HEADERS_ENABLED=true
VITE_RATE_LIMITING_ENABLED=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@db.your-staging-project.supabase.co:5432/postgres
DB_POOL_SIZE=20
DB_TIMEOUT=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
CYPRESS_BASE_URL=https://staging.your-domain.com
CYPRESS_VIDEO_RECORDING=false
CYPRESS_SCREENSHOT_ON_FAILURE=true